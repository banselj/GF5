<resources>
    <!-- Base application theme, using Material Components. -->
    <style name="Theme.GF5" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color, using a theme attribute. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Surface color -->
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>

        <!-- Error color -->
        <item name="colorError">@color/errorColor</item>
        <item name="colorOnError">@color/onErrorColor</item>

        <!-- Customize other attributes here. -->
    </style>

    <!-- Consider adding a NoActionBar theme variant if you plan to use custom toolbars or no action bar. -->
    <style name="Theme.GF5.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Define a theme for different activities or fragments if needed. -->
    <color name="errorColor">#2196F3</color>
    <color name="onErrorColor">#3F51B5</color>
</resources>
