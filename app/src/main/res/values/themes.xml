<resources>
    <!-- Base application theme, using Material Components. -->
    <style name="Theme.GF5" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/gratisfare_blue</item>
        <item name="colorPrimaryVariant">@color/navy_blue</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/soft_yellow</item>
        <item name="colorSecondaryVariant">@color/navy_blue</item>
        <item name="colorOnSecondary">@color/navy_blue</item>

        <!-- Status bar color, using a theme attribute. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Surface color -->
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/navy_blue</item>

        <!-- Error color -->
        <item name="colorError">@color/errorColor</item>
        <item name="colorOnError">@color/white</item>

        <!-- Customize other attributes here. -->
        <item name="android:windowBackground">@color/light_gray</item>
    </style>

    <!-- Consider adding a NoActionBar theme variant if you plan to use custom toolbars or no action bar. -->
    <style name="Theme.GF5.NoActionBar" parent="Theme.GF5">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Define a theme for different activities or fragments if needed. -->
    <color name="errorColor">#FF0000</color> <!-- You can define a suitable error color -->
    <color name="onErrorColor">#FFFFFF</color>
</resources>
